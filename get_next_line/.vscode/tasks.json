{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "mandatory",
			"command": "/usr/bin/gcc",
			"args": [
				"-Wall",
				"-Wextra",
				"-Werror",
				"-D",
				"BUFFER_SIZE=10",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/main.c",
				"${workspaceFolder}/project/get_next_line.c",
				"${workspaceFolder}/project/get_next_line_utils.c",
				"-o",
				"get_next_line.out"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
		},
	]
}
